<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
   "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="robots" content="noindex,nofollow,noarchive">
    
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0-wip/css/bootstrap.min.css">
    <!-- Latest compiled and minified JavaScript -->
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0-wip/js/bootstrap.min.js"></script>
    <script src="http://code.jquery.com/jquery.js"></script>
</head>
<body>
  <div id="wrap">
    <div class="container">
      <% @errors.each do |url, status| %>
          <div class="alert-danger">
            <p>Feed <b><%= url %></b> returned code <b><%= status %></b>.</p>
          </div>
      <% end %>

      <div class="page-header"><h1>furby</h1></div>
      
      <div>
        <% @entries.group_by {|e| e.published.strftime("%A, %d %B %Y")}.each do |date, entries_| %>
          <div class="jumbotron" style="padding: 2px 60px">
            <div class="container">
              <h2> <%= date %></h2>
            </div>
          </div>

          <ul class="list-group">
          <% entries_.each do |entry| %>
              <li class="list-group-item">
                <div class="well well-sm">
                  <b><a href="<%= entry.url %>"><%= entry.title %></a></b> - 
                  <small><%= entry.published.strftime("%R") %></small>
                  <div class="pull-right"><a href="<%= entry[:feed].url %>"><small><%= entry[:feed].title %></small></a></div>
                </div>
                <%= entry.content or entry.summary %>
              </li>
          <% end %>
          </ul>
        <% end %>
      </div>

      <h2 id="feedstatsheader">Feeds</h2>
      <div id="feedstats">
      <table id="feeds">
      <tr id="feedsheader">
      <th>Feed</th><th>XML</th>
      </tr>
      <% @feeds.each do |feed| %>
      <tr class="feedsrow">
      <td><a href="<%= feed.url %>"><%= feed.title %></a></td>
      <td><a class="xmlbutton" href="<%= feed.feed_url %>">XML</a></td>
      </tr>
      <% end %>
      </table>
      </div>

      <div id="footer">
      <p id="aboutrfurby">Generated by <a href="">furby</a>.</p>
      </div>

    </div>
  </div>
</body>
</html>
