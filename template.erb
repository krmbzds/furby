<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
   "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="robots" content="noindex,nofollow,noarchive">
    <link rel="stylesheet" href="style.css" type="text/css">
    <title>furby</title>
</head>
<body id="furby">
<div id="header"><h1>furby</h1></div>

<% unless @errors.empty? %>
  <h2>Errors</h2>
  <table id="feeds">
    <tr id="feedsheader">
      <th>URL</th><th>Status</th>
    </tr>
    <% @errors.each do |url, status| %>
      <tr class="feedsrow">
        <td><a href="<%= url %>"><%= url %></a></td>
        <td><%= status %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<div id="items">
<% @entries.group_by {|e| e.published.strftime("%A, %d %B %Y")}.each do |date, entries_| %>
  <div class="day"><h2> <%= date %></h2></div>
  <% entries_.each do |entry| %>
    <div class="time"><h3><%= entry.published.strftime("%R") %></h3><div>
    <div class="item">
      <p class="itemheader">
        <span class="itemtitle"><a href="<%= entry.url %>"><%= entry.title %></a></span>
        <span class="itemfrom">[<a href="<%= entry[:feed].url %>"><%= entry[:feed].title %></a>]</span>
      </p>
      <div class="itemdescription"><%= entry.summary %></div>
    </div>
  <% end %>
<% end %>
</div>

<h2 id="feedstatsheader">Feeds</h2>
<div id="feedstats">
<table id="feeds">
<tr id="feedsheader">
<th>Feed</th><th>XML</th>
</tr>
<% @feeds.each do |feed| %>
<tr class="feedsrow">
<td><a href="<%= feed.url %>"><%= feed.title %></a></td>
<td><a class="xmlbutton" href="<%= feed.feed_url %>">XML</a></td>
</tr>
<% end %>
</table>
</div>

<div id="footer">
<p id="aboutrfurby">Generated by <a href="">furby</a>.</p>
</div>

</body>
</html>
